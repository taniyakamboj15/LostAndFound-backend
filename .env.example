# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://mongodb:27017/lost-and-found
MONGODB_TEST_URI=mongodb://localhost:27017/lost-and-found-test

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=Lost & Found Platform <noreply@lostandfound.com>

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Retention Periods (in days)
RETENTION_PERIOD_DEFAULT=30
RETENTION_PERIOD_HIGH_VALUE=60
RETENTION_PERIOD_DOCUMENTS=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Organization Settings
ORGANIZATION_NAME=Lost & Found Platform
ORGANIZATION_TYPE=university
SUPPORT_EMAIL=support@lostandfound.com

# Matching Engine Configuration
MATCH_CONFIDENCE_THRESHOLD=0.6
MATCH_NOTIFICATION_THRESHOLD=0.8

# Pickup Scheduling
PICKUP_SLOT_DURATION_MINUTES=30
PICKUP_ADVANCE_BOOKING_DAYS=7

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# AI Chatbot (Grok AI by xAI)
# Get your API key from: https://console.x.ai/
GROQ_API_KEY=your_groq_api_key_here
# Available models: openai/gpt-oss-20b, llama-3.3-70b-versatile, etc.
GROQ_MODEL=openai/gpt-oss-20b

STRIPE_SECRET_KEY=sk_*************